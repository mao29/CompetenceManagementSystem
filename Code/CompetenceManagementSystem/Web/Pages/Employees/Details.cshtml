@page
@model CompetenceManagementSystem.Web.Pages.Employees.DetailsModel

@{
    ViewData["Title"] = "Сотрудник";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Подробнее</h1>

<div>
    <h4>Сотрудник</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data.CreatedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data.CreatedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data.Created)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data.LastModifiedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data.LastModifiedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data.LastModified)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data.LastModified)
        </dd>
    </dl>

    <h5>@Html.DisplayNameFor(model => model.Data.Competences)</h5>

    <p>
        <a asp-page="./EmployeeCompetences/Create" asp-route-employeeId="@Model.Data.Id">Создать</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Data.Competences[0].Competence)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data.Competences[0].Level)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data.Competences)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Competence)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Level)
                    </td>
                    <td>
                        <a asp-page="./EmployeeCompetences/Edit" asp-route-employeeId="@item.EmployeeId" asp-route-competenceId="@item.CompetenceId">Изменить</a> |
                        <a asp-page="./EmployeeCompetences/Details" asp-route-employeeId="@item.EmployeeId" asp-route-competenceId="@item.CompetenceId">Подробнее</a> |
                        <a asp-page="./EmployeeCompetences/Delete" asp-route-employeeId="@item.EmployeeId" asp-route-competenceId="@item.CompetenceId">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Data.Id">Изменить</a> |
    <a asp-page="./Index">Вернуться к списку</a>
</div>
