@page
@model CompetenceManagementSystem.Web.Pages.Resources.EditModel

@{
    ViewData["Title"] = "Изменить";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Изменить</h1>

<h4>Ресурс</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Command.Id" />
            <div class="form-group">
                <label asp-for="Command.Name" class="control-label"></label>
                <input asp-for="Command.Name" class="form-control" />
                <span asp-validation-for="Command.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Command.Description" class="control-label"></label>
                <textarea asp-for="Command.Description" class="form-control"></textarea>
                <span asp-validation-for="Command.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Command.Link" class="control-label"></label>
                <textarea asp-for="Command.Link" class="form-control"></textarea>
                <span asp-validation-for="Command.Link" class="text-danger"></span>
            </div>           
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
