@page
@model CompetenceManagementSystem.Web.Pages.Competences.CreateModel

@{
    ViewData["Title"] = "Создать";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Создать</h1>

<h4>Компетенция</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Command.CategoryId" class="control-label"></label>
                <select asp-for="Command.CategoryId" class="form-control" asp-items="Model.Categories"></select>
            </div>

            <div class="form-group">
                <label asp-for="Command.Name" class="control-label"></label>
                <input asp-for="Command.Name" class="form-control" />
                <span asp-validation-for="Command.Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Command.Type" class="control-label"></label>
                <select asp-for="Command.Type" class="form-control" asp-items="Model.Types"></select>
                <span asp-validation-for="Command.Type" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Вернуться к списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
