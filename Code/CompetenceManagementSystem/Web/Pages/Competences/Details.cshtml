@page
@model CompetenceManagementSystem.Web.Pages.Competences.DetailsModel

@{
    ViewData["Title"] = "Подробности";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Подробности</h1>

<div>
    <h4>Компетенция</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data.CompetenceCategory)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data.CompetenceCategory)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data.Type)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data.Type)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data.CreatedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data.CreatedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data.Created)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data.Created)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data.LastModifiedBy)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data.LastModifiedBy)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Data.LastModified)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Data.LastModified)
        </dd>
    </dl>

    <h5>@Html.DisplayNameFor(model => model.Data.Resources)</h5>

    <p>
        <a asp-page="./CompetenceResources/Create" asp-route-competenceId="@Model.Data.Id">Создать</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Data.Resources[0].Level)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data.Resources[0].Resource)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Data.Resources[0].Comment)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Data.Resources)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Level)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Resource)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Comment)
                    </td>
                    <td>
                        <a asp-page="./CompetenceResources/Edit" asp-route-resourceId="@item.ResourceId" asp-route-competenceId="@item.CompetenceId">Изменить</a> |
                        <a asp-page="./CompetenceResources/Details" asp-route-resourceId="@item.ResourceId" asp-route-competenceId="@item.CompetenceId">Подробнее</a> |
                        <a asp-page="./CompetenceResources/Delete" asp-route-resourceId="@item.ResourceId" asp-route-competenceId="@item.CompetenceId">Удалить</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Data.Id">Изменить</a> |
    <a asp-page="./Index">Вернуться к списку</a>
</div>
