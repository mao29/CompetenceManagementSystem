@page
@model CompetenceManagementSystem.Web.Pages.Competences.CompetenceResources.CreateModel

@{
    ViewData["Title"] = "Создать";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Создать</h1>

<h4>Ресурс для овладения компетенцией</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <input type="hidden" asp-for="Command.CompetenceId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Data.CompetenceName" class="control-label"></label>
                <span class="form-control">@Model.Data.CompetenceName</span>
            </div>
            <div class="form-group">
                <label asp-for="Command.Level" class="control-label"></label>
                <select asp-for="Command.Level" class="form-control" asp-items="Model.Levels"></select>
                <span asp-validation-for="Command.Level" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Command.ResourceId" class="control-label"></label>
                <select asp-for="Command.ResourceId" class="form-control" asp-items="Model.Resources"></select>
                <span asp-validation-for="Command.ResourceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Command.Comment" class="control-label"></label>
                <textarea asp-for="Command.Comment" class="form-control"></textarea>
                <span asp-validation-for="Command.Comment" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="../Details" asp-route-id="@Model.Data.CompetenceId">Вернуться к компетенции</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
